.gig-actionbtns
	position: absolute
	right: 7px
	bottom: 7px
	display: none

.gig-actionbtns a
	text-decoration: none
	color: #EC6500
	font-size: 80%

.gig-outerbox:hover .gig-actionbtns
	display: inline-block

.feature .gig-widbox
	font-size: 1.7em
	line-height: 1.3

.nodelink
	color: #333333
	font-size: 80%

#gignal-footer
	position: fixed
	left: 0px
	bottom: 0px
	width: 100%
	height: 88px
	background-color: #000

#gignal-footer img
	position: relative
	top: 23px
	height: 46px
	display: block
	margin: 0 auto

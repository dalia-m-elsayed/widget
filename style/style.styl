borderline_color = #C2C2C0
action_link_color = #696969

//@import "generic"
@import "organicweb"


*
	margin: 0
	padding: 0


/* Gignal */

.gig-outerbox
	background: #f2f2f4
	margin: 0
	border: 1px solid borderline_color
	border-top: none
	border-left: none
	width: 250px
	float: left

.gig-widbox
	padding: 10px 20px
	color: #2f2f2f
	font-size: 15px
	font-family: Georgia
	line-height: 20px
	position: relative
	text-align: center
	word-wrap: break-word

.gig-outerbox:first-child .gig-widbox
	font-size: 22px
	line-height: 1.1

.gig-widbox p, .gig-widtitle
	text-align: left
	
	&.text
		max-height: 200px
		overflow: hidden

.gig-widimgbox
	//padding: 10px
	height: 185px
	position: relative

.gig-widbox img
	//max-width: 180px
	max-width: 250px

.gig-widtitle
	line-height: 18px
	margin-top: 7px
	font-size: 13px
	font-weight: normal
	color: action_link_color

.gig-widimgbox
	background-size: cover;

.gig-imgauthor
	position: absolute
	left: 10px
	right: 10px
	bottom: 10px

.gig-imgauthor .gig-widtitle
	color: #fff
	margin-top: 60px
	margin-left: 10px

.gig-avatar
	max-width: 18px
	max-height: 18px

.gig-checkedin
	font-size: 10px
	font-family: Arial
	text-align: right
	line-height: 1px
	font-weight: bold

.gig-actionbtn
	background: url('../images/btn-rpt.jpg') repeat-x center center
	border: 1px solid #993e00
	padding: 0 6px
	display: inline-block
	color: #3b3b3b
	text-shadow: 1px 1px #e67d36
	text-decoration: none
	font-size: 11px


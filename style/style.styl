.gig-actionbtns
	position: absolute
	right: 7px
	bottom: 7px
	display: none

.gig-actionbtns a
	text-decoration: none
	color: action_link_color
	font-size: 80%

.gig-outerbox:hover .gig-actionbtns
	display: inline-block

.feature .gig-widbox
	font-size: 1.7em
	line-height: 1.3

.nodelink
	color: #333333
	font-size: 80%

#gignal-footer
	position: fixed
	left: 0px
	bottom: 0px
	width: 100%
	height: 88px
	background-color: #000

#gignal-footer img
	position: relative
	top: 23px
	height: 46px
	display: block
	margin: 0 auto

.read-more
	position: absolute 
	bottom: 0 left: 0
	width: 100% 
	text-align: center 
	margin: 0
	padding: 30px 0 
	/* "transparent" only works here because == rgba(0,0,0,0) */ 
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, transparent),color-stop(1, black))
		background-image: -webkit-linear-gradient(top, transparent, black)
		background-image: -moz-linear-gradient(top, transparent, black)
		background-image: -ms-linear-gradient(top, transparent, black)
		background-image: -o-linear-gradient(top, transparent, black)

<div class="gig-widbox">
	<p>{{{linkify text}}}</p>
	<h3 class="gig-widtitle">
		<img src="http://webjay.github.com/rf12/widget/images/{{service}}.png" alt="{{service}}" class="img_floatLeft gig-avatar">
		<a href="{{{profilelink service username user_id}}}" target="_top"><img src="{{user_image}}" alt="avatar" class="img_floatLeft gig-avatar"></a>
		{{name}}
	</h3>
	<div class="gig-actionbtns">
		<a href="https://twitter.com/intent/tweet?screen_name={{username}}" data-related="{{username}},gignal">@reply</a>
	</div>
</div>
